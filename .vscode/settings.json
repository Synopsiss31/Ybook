{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],
  "jest.autoRun": {
    "watch": true, // Start the jest with the watch flag
    "onStartup": ["all-tests"] // Run all tests upon project launch
  },
  "jest.showCoverageOnLoad": true, // Show code coverage when the project is launched
  "jest.showTerminalOnLaunch": false, // Don't automatically open test explorer terminal on launch
  // Multiple language settings for json and jsonc files
  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#0a9447",
    "activityBar.background": "#0a9447",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#640ed1",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#0a9447",
    "statusBar.background": "#076430",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#0a9447",
    "statusBarItem.remoteBackground": "#076430",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#076430",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#07643099",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#076430",
  "workbench.colorTheme": "Abyss",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
